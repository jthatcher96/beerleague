<%= form_for(@result) do |f| %>
  <div class="field">
    <%= f.label :winner_score %><br>
    <%= f.text_field :winner_score %>
  </div>
  <div class="field">
    <%= f.label :loser_score %><br>
    <%= f.text_field :loser_score %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :winner %><br>
    <%= f.collection_select :winner_id, @teams, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :loser %><br>
    <%= f.collection_select :loser_id, @teams, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
